<div class="container">
  <center>
    <div>
      <label type="label"><%= @quests.quest_message %></label>
    </div>

    <br /><br />

    <div class="left-btn">
      <form action="/quests/<%= @quests.path_A_ID %>" method=GET >
        <div class="button-container">
          <input class="button" type="submit" value="<%= @quests.path_A %>"/>
        </div>
      </form>
    </div>

    <div class="right-btn">
      <form action="/quests/<%= @quests.path_B_ID %>" method=GET >
        <div class="button-container">
          <input class="button" type="submit", value="<%= @quests.path_B %>", display="<%='none' if @quests.quest_message == 2 || 3%>" />
        </div>
      </form>
    </div>
  </center>
</div>
